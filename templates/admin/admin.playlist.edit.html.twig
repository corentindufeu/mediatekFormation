{% extends "admin/admin.basefront.html.twig" %}

{% block body %}
    <h2>DÃ©tail Formation :</h2>
    <form method="POST" action="{{ path('admin.playlist.registerone', {id:playlist.id})}}">
        <div class="form-group mt-4">
            <label for="nameInput">Titre</label>
            <input type="text" class="form-control" id="nameInput" value="{{ playlist.name }}" name="nameInput" required>
        </div>
        <div class="form-group mt-4">
            <label for="descriptionInput">Description</label>
            <textarea class="form-control" id="descriptionInput" rows="3" name="descriptionTextArea">
                {{ playlist.description }}
            </textarea>
        </div>
        <div class="form-group mt-4">
            <h5 class='mb-3'>Formations Incluses</h5>
            {% for formation in playlist.formations %}
                <h6 class='mt-3 btn btn-info btn-sm' style='cursor: initial;'>{{ formation.title }}</h6>
            {% endfor %}
        </div>
        <button type="submit" class="btn btn-primary mb-2 mt-4">Valider</button>
    </form>
{% endblock %}